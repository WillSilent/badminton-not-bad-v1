<view class="container">
  <view class="card-1">
      <view class="profile-info">
        <view wx:if="{{logged}}" class="logged-container">
          <image class="avatar" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/user-avatar.png"></image>
          <text class="username">Will99</text>
          <text class="gender">♂</text>
        </view>
        <view wx:else>
          <van-button bind:tap="toLoginPage">点击登录</van-button>
        </view>
        <view class="level-badge">自评等级</view>
      </view>
      <van-divider />
      <view class="stats">
        <view class="stat-item">
          <text>单打</text>
          <text class="stat-value">0场</text>
        </view>
        <view class="stat-item">
          <text>胜率</text>
          <text class="stat-value">0%</text>
        </view>
        <view class="stat-item"></view>
        <view class="stat-item">
          <text>双打</text>
          <text class="stat-value">0场</text>
        </view>
        <view class="stat-item">
          <text>胜率</text>
          <text class="stat-value">0%</text>
        </view>

        <!-- <view class="stat-item">
          <text>混双</text>
          <text class="stat-value">0场</text>
        </view>
        <view class="stat-item">
          <text>胜率</text>
          <text class="stat-value">0%</text>
        </view> -->
      </view>
      <text class="note">※ 以上数据统计全部已结束比赛</text>
  </view>
  <view class="menu">
    <view class="menu-item" bindtap="onActivityTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>我的活动</text>
    </view>
    <view class="menu-item" bindtap="onMatchTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>我的比赛</text>
    </view>
    <view class="menu-item" bindtap="onScoreTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>我的比分</text>
    </view>
    <view class="menu-item" bindtap="onLevelTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>等级标准</text>
    </view>
    <view class="menu-item" bindtap="onRulesTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>赛制介绍</text>
    </view>
    <view class="menu-item" bindtap="onGuideTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>新手指南</text>
    </view>
    <view class="menu-item" bindtap="onSupportTap">
      <image class="icon" src="cloud://badmintonnotbad-4gdy6j24abe0d671.6261-badmintonnotbad-4gdy6j24abe0d671-1329550906/images/score.png"></image>
      <text>联系客服</text>
    </view>
  </view>
</view>
